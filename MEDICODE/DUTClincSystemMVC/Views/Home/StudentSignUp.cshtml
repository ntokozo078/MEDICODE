
@model DUTClincSystemMVC.Models.Student

@{
    ViewBag.Title = "StudentSignUp";
}

<style>
    /* Center the form and labels */
    .form-horizontal {
        width: 100%;
        max-width: 400px;
        margin: 0 auto; /* Center the form horizontally */
        text-align: center; /* Center the form contents */
    }

    /* Style the labels and inputs */
    .form-group {
        margin-bottom: 30px; /* Increase bottom margin for spacing */
    }

    .control-label {
        font-size: 16px;
        text-align: left; /* Align text to the left */
        display: block; /* Ensure label is a block element */
        margin-bottom: 10px; /* Add margin below labels */
    }

    .form-control {
        border: none;
        background-color: transparent; /* Make background transparent */
        border-bottom: 2px solid #b09ae6; /* Lilac color bottom border */
        padding: 10px; /* Larger padding */
        width: 100%; /* Full width */
        text-align: center; /* Center align text */
        font-size: 16px; /* Larger font size */
        color: #6a5e88; /* Darker text color */
    }

    /* Style the create button */
    .btn-create {
        background-color: #b09ae6; /* Lilac color */
        color: #ffffff; /* White text color */
        border: none;
        border-radius: 20px; /* Round button */
        padding: 10px 20px; /* Larger padding */
        font-size: 18px; /* Larger font size */
        cursor: pointer;
        transition: background-color 0.3s ease; /* Smooth transition */
        margin-top: 20px; /* Add some top margin */
    }

        .btn-create:hover {
            background-color: #927cbd; /* Darker lilac color on hover */
        }

    /* Style error message */
    .text-danger {
        color: red;
        text-align: center;
    }

    h2 {
        text-align: center;
        font-family: Arial, sans-serif;
        font-size: 24px; /* Increase heading size */
        margin-bottom: 40px; /* Increase bottom margin for more space */
    }

    p {
        text-align: center;
    }
</style>

<h2>Sign Up</h2>

