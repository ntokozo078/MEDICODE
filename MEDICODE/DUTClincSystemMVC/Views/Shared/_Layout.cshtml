
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Custom styles */
        .nav-background {
            background-color: #9e7cc1; /* Lilac background color */
        }

        .navbar-brand {
            color: #ffffff; /* White color for navbar brand */
            font-size: 24px; /* Increase font size */
        }

        .navbar-nav .nav-link {
            color: #ffffff; /* White color for nav links */
        }

        .navbar-toggler {
            border-color: #ffffff; /* White color for navbar toggler */
        }

        .container.body-content {
            margin-top: 20px; /* Add some top margin */
        }

        footer {
            margin-top: 20px; /* Add some top margin */
            text-align: center;
        }

            footer p {
                color: #666666; /* Dark gray color for footer text */
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark nav-background">
        <a class="navbar-brand" href="#">
            <img src="https://th.bing.com/th/id/R.e25350e9aa70656d9ad4036f00a4c40d?rik=XVVBt4wC1OeSdw&riu=http%3a%2f%2fwww.dut.ac.za%2fwp-content%2fuploads%2f2018%2f10%2fDUT-LOGO.jpeg&ehk=Kev66RM%2bvzODFY4TduMZOXm8eYl47q%2f0XNk3DWqdrJk%3d&risl=&pid=ImgRaw&r=0&sres=1&sresct=1" alt="DUT Logo" width="200">
        </a>
        <div class="container">
            @Html.ActionLink("Medical Clinic", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-md-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (ViewBag.Student != null)
                    {
                        <li>@Html.ActionLink("Make Appointment", "Book Appointment", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (ViewBag.User == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Sign Up", "StudentSignUp", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    @if (ViewBag.Student != null)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("My Appointments", "MyAppointments", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    @if (ViewBag.Doctor != null)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("View Appointments", "ViewAppointments", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
