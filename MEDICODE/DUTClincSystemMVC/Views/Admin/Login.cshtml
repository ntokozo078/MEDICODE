
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    body {
        background-color: #f0f8ff; /* Light blue background */
        font-family: Arial, sans-serif; /* Change font-family to match the theme */
    }

    .form-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #ffffff; /* White background */
        border-radius: 10px; /* Rounded corners */
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Shadow effect */
    }

    .title {
        text-align: center;
        margin-bottom: 20px;
        color: #333; /* Dark text color */
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-size: 16px; /* Increase font-size */
        color: #333; /* Dark text color */
    }

    .form-control {
        border: none;
        background-color: #f0f8ff; /* Light blue background */
        border-bottom: 2px solid #4682b4; /* Lighter blue bottom border */
        margin-bottom: 20px;
        padding: 10px;
        width: 100%;
        font-size: 16px;
        text-align: center;
        transition: border-bottom-color 0.3s ease;
    }

        .form-control:focus {
            outline: none;
            border-bottom-color: #87ceeb; /* Lighter blue on focus */
        }

    .text-danger {
        text-align: center;
        color: red; /* Red color for error message */
    }

    .btn-lilac {
        background-color: #4682b4; /* Light blue button color */
        color: #ffffff; /* White text color */
        border: none;
        border-radius: 20px;
        padding: 10px 20px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        width: 100%;
    }

        .btn-lilac:hover {
            background-color: #87ceeb; /* Lighter blue on hover */
        }
</style>

<h2 class="title">Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-container">
        <div class="form-group">
            <label for="email" class="control-label">Email Address:</label>
            <input type="email" name="email" class="form-control" />
        </div>

        <div class="form-group">
            <label for="password" class="control-label">Password:</label>
            <input type="password" name="password" class="form-control" />
        </div>

        <p class="text-danger">@ViewBag.ErrorMessage</p>

        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-lilac" />
        </div>
    </div>
}
